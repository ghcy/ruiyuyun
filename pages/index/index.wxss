.banner {
  width: 750rpx;
  height: 640rpx;
  background-color: pink;
}

.banner image {
  width: 100%;
  height: 640rpx;
}
.box {
  display: flex;
  justify-content: space-around;
  width: 720rpx;
  height: 420rpx;
  background-color: #ffffff;
  margin: 20rpx auto;
  align-items: center;
  border-radius: 10rpx;
}
.box .text{
  width: 1rpx;
  height: 260rpx;
  border: 1px #f3ebe2 solid;
}
.entry{
  width: 240rpx;
  height: 240rpx;
  background-color: white;
}
.entry image{
  width: 100%;
  height: 100%;
}
.box1{
  display: flex;
  justify-content: space-between;
}
.picture{
  width: 242rpx;
  height: 364rpx;
