<view class="container">
  <view class="top">
    <view class="textarea">潮米道大悦城店</view>
    <view class="optionbox" bindtap="switchTab">
      <view class="tangshi {{index == 1 ? 'selected' : ''}}" id="tangshi">堂食</view>
      <view class="ziqu {{index == 2 ? 'selected' : ''}}" id="ziqu">自取</view>
    </view>
    <view class="time">
      <view class="textarea1">取餐时间</view>
      <view class="select-time">
        <picker class='time-picker' mode="multiSelector" bindchange="bindStartMultiPickerChange" bindtap='pickerTap' bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">{{startDate}}</picker>
      </view>
    </view>
  </view>
  <!-- 商品列表 -->
  <view class="goods">
    <view class="item">
      <image class="img1" src="/static/indexImage/shangpin1.png"></image>
      <view class="text1">招牌牛腩</view>
      <view class="text2">一人份，微辣</view>
      <view class="text3">x1</view>
      <view class="text4">¥ 30.00</view>
    </view>
    <view class="item">
      <image class="img1" src="/static/indexImage/shangpin2.png"></image>
      <view class="text1">双丸粿条</view>
      <view class="text2">一人份，中辣</view>
      <view class="text3">x1</view>
      <view class="text4">¥ 28.00</view>
    </view>
  </view>
  <!-- 订单备注 -->
  <view class="remark">
    <view class="textarea">订单备注</view>
    <textarea class="ta" model:value="{{value}}" placeholder="请输入备注信息" maxlength="30"></textarea>
  </view>
  <!-- 优惠券 -->
  <view class="discount">
    <view class="dabaofei" wx:if="{{index == 2}}">
      <view class="text1">打包费</view>
      <view class="amount">¥ 3.00</view>
    </view>
    <navigator url="/pages/coupon/coupon" open-type="navigate" class="nav">
      <view class="text1">优惠券</view>
      <image src="/static/indexImage/组 644@2x.png" class="img2"></image>
      <view class="text2">-¥ 5.00</view>
      <image src="/static/indexImage/优惠券icon@2x.png" class="img3"></image>
    </navigator>
    <view class="sum">
      <view class="text1">已优惠</view>
      <view class="amount">¥ 5.00</view>
      <view class="total">应支付 ¥ 53.00</view>
    </view>
  </view>

</view>
<view class="pay">
    <view class="left">
      <view class="text1">需支付</view>
      <view class="text2">¥ 30.00</view>
    </view>
    <view class="right" bindtap="gotoOrderDetail">去支付</view>
  </view>